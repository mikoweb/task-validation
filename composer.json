{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^1.12",
        "squizlabs/php_codesniffer": "^3.10",
        "phpunit/phpunit": "^11.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit"
        ],
        "code-check": [
            "./vendor/bin/phpcs",
            "./vendor/bin/php-cs-fixer check -vvv"
        ],
        "code-fix": [
            "./vendor/bin/phpcbf",
            "./vendor/bin/php-cs-fixer fix"
        ],
        "phpstan": [
            "./vendor/bin/phpstan"
        ]
    }
}
